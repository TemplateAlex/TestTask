@page
@model TaskForAkvelon.Pages.CreateProjectModel
@{
    ViewData["Title"] = "Create Project";
}

@section Styles {
    <link rel="stylesheet" href="~/css/StyleForForms.css" type="text/css">
}

<div class="form-wrapper container-fluid d-flex justify-content-center">
    <div class="form-wrapper__form">
        <form method="post">
            <div class="form-group">
                <label for="projName">Project Name:</label>
                <input class="form-control" id="projName" type="text" name="projectName">
            </div>
            <div class="form-group">
                <label for="startDate">Start Date</label>
                <input class="form-control" id="startDate" type="date" name="startDate">
            </div>
            <div class="form-group">
                <label for="completionDate">Completion Date:</label>
                <input class="form-control" id="completionDate" type="date" name="completionDate">
            </div>
            <div class="form-group">
                <label for="projStat">Project Status</label>
                <select class="form-control" id="projStat" name="projectStatus">
                    <option selected value="NotStarted">Not Started</option>
                    <option value="Active">Active</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>
            <div class="form-group">
                <label for="projPriority">Project Priority</label>
                <input class="form-group" id="projPriority" type="number" name="projectPriority">
            </div>
            <div class="container-fluid d-flex justify-content-end">
                <button class="btn btn-info" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>
